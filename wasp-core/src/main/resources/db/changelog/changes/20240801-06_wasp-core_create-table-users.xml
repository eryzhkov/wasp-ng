<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="20240801-06" author="eryzhkov">

    <createTable tableName="users" schemaName="core" remarks="The registered users.">
      <column name="id" type="java.util.UUID" defaultValueComputed="uuid_generate_v4()" remarks="The unique identifier.">
        <constraints primaryKey="true" primaryKeyName="pk_users" nullable="false"/>
      </column>
      <column name="login" type="varchar(50)" remarks="The login.">
        <constraints nullable="false" unique="true" uniqueConstraintName="logins_un"/>
      </column>
      <column name="password" type="text" remarks="The encrypted password. Used only if a user has INT_WASP authentication type.">
        <constraints nullable="true"/>
      </column>
      <column name="first_name" type="text" remarks="The first name.">
        <constraints nullable="false"/>
      </column>
      <column name="last_name" type="text" remarks="The last name.">
        <constraints nullable="false"/>
      </column>
      <column name="middle_name" type="text" remarks="The optional middle name.">
        <constraints nullable="true"/>
      </column>
      <column name="comment" type="text" remarks="The optional comment.">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="java.sql.Types.TIMESTAMP_WITH_TIMEZONE" remarks="When the user was created.">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="java.sql.Types.TIMESTAMP_WITH_TIMEZONE" remarks="When the user was last time updated.">
        <constraints nullable="true"/>
      </column>
      <column name="ref_auth_types" type="JAVA.UTIL.UUID" remarks="A reference to the actual user authentication type.">
        <constraints nullable="false" referencedTableSchemaName="core" referencedTableName="auth_types" referencedColumnNames="id" foreignKeyName="fk_auth_types"/>
      </column>
      <column name="ref_user_statuses" type="JAVA.UTIL.UUID" remarks="A reference to the actual user status.">
        <constraints nullable="false" referencedTableSchemaName="core" referencedTableName="user_statuses" referencedColumnNames="id" foreignKeyName="fk_user_statuses"/>
      </column>
    </createTable>

    <sql endDelimiter=";">
      insert into core.users (login, password, first_name, last_name, created_at, ref_auth_types, ref_user_statuses)
      select 'admin@wasp',
             crypt('password', '1234567'),
             'Admin',
             'Admin',
             now(),
             (select id from core.auth_types where auth_type_code = 'INT_WASP'),
             (select id from core.user_statuses where user_status_code = 'ACTIVE');
    </sql>

  </changeSet>

</databaseChangeLog>